<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.aizhonghui.ri_kaone.Otherdeng">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_xx"
            android:text="×"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#2a2a2a"
            android:textSize="20dp"
            android:text="登录你的头条，精彩永不丢失"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/view_one"
                android:background="#fafafa"/>
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_below="@+id/view_one"
                android:layout_centerHorizontal="true"
                android:background="@drawable/three_log"
                android:layout_height="50dp">
                <EditText
                    android:layout_width="200dp"
                    android:layout_centerVertical="true"
                    android:layout_height="40dp"
                    android:textColor="#5f5f5f"
                    android:layout_marginLeft="8dp"
                    android:hint="18856456454"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/et_yzm"
                    android:text="发送验证码"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_toLeftOf="@+id/et_yzm"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/view_two"
                android:background="#fafafa"/>
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_below="@+id/view_two"
                android:layout_centerHorizontal="true"
                android:background="@drawable/three_log"
                android:layout_height="50dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="40dp"
                    android:textColor="#5f5f5f"
                    android:layout_marginLeft="8dp"
                    android:hint="请输入验证码"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:id="@+id/view_three"
                android:layout_centerHorizontal="true"
                android:textSize="10dp"
                android:text="未注册手机验证后自动登录"/>

            <Button
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/view_three"
                android:layout_width="match_parent"
                android:background="@drawable/btn_log"
                android:textColor="#fcf2f2"
                android:text="进入头条"
                android:layout_height="40dp" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#fafafa"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我已阅读并同意用户＂协议和隐私条款＂"
            android:id="@+id/tv_tiaokuan"
            android:layout_centerHorizontal="true"
            />
        <CheckBox
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:checked="true"
            android:layout_toLeftOf="@+id/tv_tiaokuan"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fafafa"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="#5d7499"
            android:text="账号密码登录"/>
    </RelativeLayout>
     <View
         android:layout_width="match_parent"
         android:layout_height="60dp"
         />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:text="——更多登录方式——"/>
    </RelativeLayout>
     <RelativeLayout
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:layout_width="match_parent"
         android:layout_height="100dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="100dp">

             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="100dp">
                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:background="@drawable/kongquan"
                     android:layout_centerInParent="true"
                     android:src="@drawable/weixin"/>

             </RelativeLayout>
             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="100dp">
                 <ImageView

                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:background="@drawable/kongquan"
                     android:layout_centerInParent="true"
                     android:src="@drawable/qq"/>

             </RelativeLayout>
             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="100dp">
                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:background="@drawable/kongquan"
                     android:layout_centerInParent="true"
                     android:src="@drawable/weibo"/>

             </RelativeLayout>
             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="100dp">
                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:background="@drawable/kongquan"
                     android:layout_centerInParent="true"
                     android:src="@drawable/y"/>

             </RelativeLayout>
             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="100dp">
                 <ImageView
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:background="@drawable/kongquan"
                     android:layout_centerInParent="true"
                     android:src="@drawable/w"/>

             </RelativeLayout>
         </LinearLayout>
     </RelativeLayout>



</LinearLayout>
